<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg3"
    android:orientation="vertical"
    tools:context=".FarmerCowListActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@color/WarnaTopNav"
        android:orientation="horizontal"
        >


        <ImageButton
            android:id="@+id/btnSideNewCow"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:layout_weight="3"
            android:background="?android:selectableItemBackground"
            android:paddingBottom="5dp"
            android:paddingTop="5dp"
            app:srcCompat="@drawable/back_arrow"
            android:scaleType="centerInside"
            tools:ignore="ContentDescription"
            />

        <ImageView
            android:id="@+id/LogoNewCow"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:layout_weight="1"
            app:srcCompat="@drawable/logotext"
            tools:ignore="ContentDescription" />

    </LinearLayout>

    <Button
        android:id="@+id/button4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/unggahFoto"
        android:layout_gravity="right"
        android:layout_marginRight="20dp"
        android:layout_marginTop="10dp"
        android:text="@string/tambah_sapi"
        tools:ignore="RtlHardcoded" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/fotoSapi1"
            android:layout_width="match_parent"
            android:layout_marginTop="5dp"
            android:layout_weight="1"
            android:layout_height="100dp"
            app:srcCompat="@drawable/sapi"
            tools:ignore="ContentDescription,RtlHardcoded,RtlSymmetry"
            />

        <TextView
            android:id="@+id/titleNamaSapi1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginTop="35dp"
            android:textSize="10pt"
            android:text="@string/nama_sapi"
            tools:ignore="RtlHardcoded,RtlSymmetry" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/fotoSapi2"
            android:layout_width="match_parent"
            android:layout_marginTop="5dp"
            android:layout_weight="1"
            android:layout_height="100dp"
            app:srcCompat="@drawable/sapi"
            tools:ignore="ContentDescription,RtlHardcoded,RtlSymmetry"
            />

        <TextView
            android:id="@+id/titleNamaSapi2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginTop="35dp"
            android:textSize="10pt"
            android:text="@string/nama_sapi"
            tools:ignore="RtlHardcoded,RtlSymmetry" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/fotoSapi3"
            android:layout_width="match_parent"
            android:layout_marginTop="5dp"
            android:layout_weight="1"
            android:layout_height="100dp"
            app:srcCompat="@drawable/sapi"
            tools:ignore="ContentDescription,RtlHardcoded,RtlSymmetry"
            />

        <TextView
            android:id="@+id/titleNamaSapi3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginTop="35dp"
            android:textSize="10pt"
            android:text="@string/nama_sapi"
            tools:ignore="RtlHardcoded,RtlSymmetry" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnPrev"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/White"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="30dp"
            android:layout_weight="1"
            android:text="@string/prev"
            tools:ignore="ButtonStyle,RtlHardcoded" />

        <Button
            android:id="@+id/btnNext"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/White"
            android:layout_marginRight="30dp"
            android:text="@string/next"
            android:layout_marginLeft="20dp"
            tools:ignore="ButtonStyle,RtlHardcoded" />
    </LinearLayout>



</LinearLayout>